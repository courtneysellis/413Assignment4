@{
    ViewBag.Title = "Submit Your Restaurant Suggestions";
}
@model UserRestaurant

<h1 class="display-4" style="color:#17a2b8;">@ViewBag.Title</h1>

<div>
    <form asp-action="RestaurantForm" method="post">
        <label asp-for="UserName" class="form-label">Your Name:</label>
        <input asp-for="UserName" class="form-control"/>
        <br /><br />

        <label asp-for="Name" class="form-label">Restaurant Name:</label>
        <input asp-for="Name" class="form-control"/>
        <br /><br />

        <label asp-for="FavDish" class="form-label">Your Favorite Dish:</label>
        <input asp-for="FavDish" class="form-control"/>
        <br /><br />

        <label asp-for="Phone" class="form-label">Restaurant Phone #:</label>
        <input asp-for="Phone" class="form-control"/>
        <br /><br />

        <div asp-validation-summary="All"></div>

        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
</div>
